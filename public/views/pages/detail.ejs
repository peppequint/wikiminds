<!DOCTYPE html>
<html lang="en" dir="ltr">
	<head>
		<% include ../partials/head %>
	</head>
	<body>
		<% include ../partials/header %>
		<main class="l-container">
			<section class="m-detail">
				<header class="m-detail--header">
					<img class="m-detail--image" src="<%=issue.image%>" alt="">
					<h1><%= issue.title %></h1>
					<span>Likes: <%= issue.likes.length %></span>
					<span>Category: <%= issue.category%></span>
					<p>Posted by:</p>
					<a href='/users/<%=owner._id%>'><h3><%= owner.username %></h3></a>
				</header>
				<nav class="m-nav">
					<ul class="m-nav--list">
						<li class="m-list--item m-item--active">Issue</li>
						<li class="m-list--item m-item--inactive">Comment</li>
						<li class="m-list--item m-item--inactive">Contribute</li>
					</ul>
				</nav>
				<article class='m-information'>
					<section class="m-detail--information m-detail--issue">
						<p class="m-information--paragraph"><%= issue.meta_description%></p>
						<% if(session.userId && issue.owner && issue.owner === session.userId){%>
						<a href="/edit/<%=issue._id%>">Edit this issue</a>
						<a href="/delete/<%=issue._id%>">Delete this issue</a>
						<% } %>
					</section>
					<section class="m-detail--information m-detail--comment">
						<p class="m-information--paragraph"><%= issue.meta_description%></p>
						<% if(session.userId && issue.owner && issue.owner === session.userId){%>
						<a href="/edit/<%=issue._id%>">Edit this issue</a>
						<a href="/delete/<%=issue._id%>">Delete this issue</a>
						<% } %>
					</section>
					<section class='m-detail--information m-detail--contribute'>
						<p class="m-information--paragraph"><%= issue.meta_description%></p>
						<% if(session.userId && issue.owner && issue.owner === session.userId){%>
						<a href="/edit/<%=issue._id%>">Edit this issue</a>
						<a href="/delete/<%=issue._id%>">Delete this issue</a>
						<% } %>
					</section>
				</article>
			</section>
		</main>
		<% include ../partials/footer %>
		<script type="text/javascript" src="./../../js/index.js"></script>
	</body>
</html>
